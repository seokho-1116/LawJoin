<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_comment_category"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:hint="@string/msg_hint_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/divide_line0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toBottomOf="@id/edt_comment_category"
        tools:layout_editor_absoluteX="4dp" />

    <EditText
        android:id="@+id/edt_comment_title"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:inputType="text"
        android:hint="@string/msg_hint_review_title"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divide_line0"/>

    <View
        android:id="@+id/divide_line1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toBottomOf="@id/edt_comment_title"
        tools:layout_editor_absoluteX="4dp" />

    <EditText
        android:id="@+id/edt_comment_content"
        android:layout_width="0dp"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="@string/msg_review_content"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divide_line1"/>

    <View
        android:id="@+id/divide_line2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toBottomOf="@id/edt_comment_content"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/btn_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/divide_line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_write_post"
        android:drawableStart="@drawable/ic_post_write"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:text="@string/msg_write_review"
        android:textColor="#FFFFFF"
        android:minHeight="0dp"
        android:textSize="12sp"
        android:drawablePadding="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
