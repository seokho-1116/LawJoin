<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_free_board">

    <!-- App name -->
    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/loadong_lawjoin"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_page_image"
        android:textAppearance="@style/join"/>

    <View
        android:id="@+id/start_page_image"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_free_counsel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/start_page_text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:textSize="23sp"
        android:textStyle="bold"
        android:text="@string/msg_free_counsel_info"
        android:textAppearance="@style/start_page_text1"
        android:translationY="-5.91sp"
        app:layout_constraintTop_toBottomOf="@+id/start_page_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/start_page_text2"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="8sp"
        android:text="@string/msg_counsel_info"
        android:textAppearance="@style/start_page_text2"
        android:translationY="-3.78sp"
        app:layout_constraintTop_toBottomOf="@+id/start_page_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_start_free_counsel"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_write_post"
        android:gravity="center"
        android:text="@string/msg_reserve"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:paddingTop="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/start_page_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>